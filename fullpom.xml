<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.visualbi.master</groupId>
  <artifactId>parent</artifactId>
  <version>1.3.0</version>
  <packaging>pom</packaging>

  <properties>
		<tycho-version>0.21.0</tycho-version>
	</properties>
	<repositories>
		<repository>
			<id>designstudio_p2_repo</id>
			<layout>p2</layout>
			<url>file:\\\D:\build\p2repo-1-4\p2repo</url>
		</repository>
	</repositories>

	<build>
		<plugins>
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>tycho-maven-plugin</artifactId>
				<version>${tycho-version}</version>
				<extensions>true</extensions>
			</plugin>

			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>target-platform-configuration</artifactId>
				<version>${tycho-version}</version>
				<configuration>
					<environments>
						<environment>
							<os>win32</os>
							<ws>win32</ws>
							<arch>x86</arch>
						</environment>
						<environment>
							<os>win32</os>
							<ws>win32</ws>
							<arch>x86_64</arch>
						</environment>
						<environment>
			              <os>linux</os>
			              <ws>gtk</ws>
			              <arch>x86_64</arch>
			            </environment>
					</environments>
				</configuration>
			</plugin>
 			<plugin>
		    <artifactId>maven-jarsigner-plugin</artifactId>
		    <version>1.2</version>
		    <executions>
		        <execution>
		            <id>sign</id>
		            <goals>
		                <goal>sign</goal>
		            </goals>
		        </execution>
		    </executions>
		    <configuration>
		        <keystore>D:\GitHub\VBI_DX_Suite\full</keystore>
		        <alias>visualbi</alias>
		        <storepass>key123</storepass>
		        <keypass>key123</keypass>
		    </configuration>
		</plugin>
	</plugins>
	</build>
	<modules>
		<module>com.visualbi.chart</module>
		<module>com.visualbi.map</module>
		<module>com.visualbi.selector</module>
		<module>com.visualbi.utilities</module>
		<module>feature/chart</module>
		<module>feature/map</module> 
		<module>feature/selector</module>
		<module>feature/utilities</module>
		<module>updatesite</module>
	</modules>
</project>
